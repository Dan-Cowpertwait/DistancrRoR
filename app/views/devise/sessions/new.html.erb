<div class="container vertical-center">
  <div class="row">
    <div class="col-md-4 mx-auto">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Log In</h1>

        <p class="h5 mb-3 font-weight-normal text-center">Address</p>
        
        <div class="field">
          <%= f.label :email, class:"sr-only"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <p class="h5 mb-3 font-weight-normal text-center">Address</p>
        <div class="field">
          <%= f.label :password, class:"sr-only" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>

        <br />
        <p class="h5 mb-3 font-weight-normal text-center">Address</p>
        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
        </div>

        <br />

        <div class="col-md-3 mx-auto"><%= render "devise/shared/links" %></div>
        <% end %>


      </div>
     </div>
</div>






