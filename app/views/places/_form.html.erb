<div class="container vertical-center">
  <div class="row">
    <div class="col-md-4 mx-auto">
        <h1 class="a mb-3 font-weight-normal text-center">Business Information</h1>
        <%= form_for @place do |f| %>
        <% if @place.errors %>
        <% @place.errors.full_messages.each  do |message| %>
            <p class="badge badge-danger" style="background: #BD1E1E;"><%= message %></p>
        <% end %>
        <% end %>
        <%= f.hidden_field :owner_id%>

        <br />

        <p class="h5 mb-3 font-weight-normal text-center">Name</p>
        <div class="field">
            <%= f.label :name, class:"sr-only" %>
            <%= f.text_field :name, class:"form-control"%>

        <br />

        </div>
        <p class="h5 mb-3 font-weight-normal text-center">Address</p>
        <div class="field">
            <%= f.label :location, class:"sr-only"  %>
            <%= f.text_field :location, class:"form-control"%>
        </div>

        <br />

        <p class="h5 mb-3 font-weight-normal text-center">Phone Number</p>
        <div class="field">
            <%= f.label :phone, class:"sr-only"  %>
            <%= f.phone_field :phone,  class:"form-control", type: "tel"%>
        </div>

        <br />

        <p class="h5 mb-3 font-weight-normal text-center">Occupancy</p>
        <div class="field">
            <%= f.label :occupancy, class:"sr-only"  %>
            <%= f.number_field :occupancy, class:"form-control", type: "number"%>
        </div>
        <br />

        <div class="field">
          <%= f.label :image, class:"sr-only" %>
          <%= f.file_field :image, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

          <br />


        <div class="actions">
            <%= f.submit "Submit", class: 'btn btn-lg btn-primary btn-block'%>
        </div>

        <br />

        <% end %>


      </div>
     </div>
</div>

