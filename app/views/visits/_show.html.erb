  <div class="card-deck mb-3 text-center">
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal"><%= visit.place.name %> </h4>
      </div>
      <div class="card-body">
        <%# <h1 class="card-title pricing-card-title">$0 <small class="text-muted">/ mo</small></h1> %>
        <ul class="list-unstyled mt-3 mb-4">
          <li><%= visit.created_at %></li>
          <li>something else about visit</li>
          <li>and another one</li>
          <li>another one</li>
        </ul>
        <button type="button" class="btn btn-lg btn-block btn-outline-primary"><%= link_to 'Show', place_path(visit.place) %></button>
      </div>
    </div>
  </div>
<% end %>